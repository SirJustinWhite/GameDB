<% if @user.errors.any? %>

  <div class="alert alert-danger">
    <div class="alert alert-error">
      <strong>Uh-Oh! </strong>There seems to be <%= pluralize(@user.errors.count, "problem") %> with your registeration.
    </div>
  <div id="error_explanation">
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>